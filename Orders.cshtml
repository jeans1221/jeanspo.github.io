@page
@using Northwind.EntityModels
@model Northwind.Web.Pages.OrdersModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<div class="row">
  <h1 class="display-2">Orders</h1>
  <table class="table">
    <thead class="thead-inverse">
      <tr>
        <th>Id Orden</th>
        <th>Envio a nombre de</th>
        
      </tr>
    </thead>
    <tbody>
      @if (Model.Orders is not null)
      {
        @foreach (Order s in Model.Orders)
        {
          <tr>
            <td>@s.OrderId</td>
            <td>@s.ShipName</td>
            
          </tr>
        }
      }
    </tbody>
  </table>
</div>